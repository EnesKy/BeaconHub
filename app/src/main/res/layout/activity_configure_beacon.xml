<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfigureBeaconActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity = "center"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tv_beacon_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Beacon ID:"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_beacon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="000000000000000000"
            android:layout_marginTop="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_beacon_id_title"/>

        <TextView
            android:id="@+id/tv_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tag:"
            android:layout_marginTop="@dimen/space_top_large"
            app:layout_constraintTop_toBottomOf="@id/tv_beacon_id"/>

        <Spinner
            android:id="@+id/spn_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginTop="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_tag_title"/>

        <TextView
            android:id="@+id/tv_aisle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aisle number:"
            android:layout_marginTop="@dimen/space_top_large"
            app:layout_constraintTop_toBottomOf="@id/spn_tag"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/tv_aisle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_marginTop="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_aisle_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_placement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placement:"
            android:layout_marginTop="@dimen/space_top_large"
            app:layout_constraintTop_toBottomOf="@id/tv_aisle"/>

        <Spinner
            android:id="@+id/spn_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginTop="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_placement_title"/>

        <TextView
            android:id="@+id/tv_geo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Geolocation:"
            android:layout_marginTop="@dimen/space_top_large"
            app:layout_constraintTop_toBottomOf="@id/spn_placement"/>

        <TextView
            android:id="@+id/tv_geo_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Searching"
            android:layout_marginTop="@dimen/space_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_geo_title"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="@dimen/space_top_large"
            app:layout_constraintTop_toBottomOf="@id/tv_geo_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
