<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/default_radius_large"
    app:cardElevation="4dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/rallyLightGrey">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rallyDarkGrey"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_margin="@dimen/space_small"
            android:text="Add Notification"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/rallyGreen"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rallyDarkGrey"/>

        <TextView
            android:id="@+id/tv_web"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_margin="@dimen/space_small"
            android:text="Add Web Url"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/rallyGreen"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rallyDarkGrey"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_margin="@dimen/space_small"
            android:text="See Location"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/rallyGreen"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rallyDarkGrey"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>