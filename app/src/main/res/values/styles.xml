<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rallyGreen</item>
        <item name="colorPrimaryDark">@color/rallyDarkGrey</item>
        <item name="colorAccent">@color/rallyDarkGreen</item>

        <item name="textInputStyle">@style/AppTextField</item>

        <item name="android:windowBackground">@color/rallyLightGrey</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/rallyGreen</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>


</resources>
