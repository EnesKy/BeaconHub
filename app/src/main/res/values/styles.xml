<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rallyGreen</item>
        <item name="colorPrimaryDark">@color/rallyDarkGrey</item>
        <item name="colorAccent">@color/rallyDarkGreen</item>

        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>

        <item name="android:windowBackground">@color/rallyLightGrey</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_outline_color</item>
        <item name="boxBackgroundColor">@color/rallyLightGrey</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="CardView.ListItem">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@drawable/bottom_nav_uncheck</item>
        <item name="itemIconTint">@drawable/bottom_nav_uncheck</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name ="android:windowBackground"> @drawable/splash_screen</item>
    </style>

</resources>